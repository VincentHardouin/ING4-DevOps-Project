{
  "name": "ing4-devops-projet",
  "version": "0.2.0",
  "description": "ECE DevOps Project",
  "main": "index.js",
  "scripts": {
    "configure": "cp sample.env .env && npm ci",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettify": "prettier --write '**/*.js' && prettier --write ./lib/views --parser glimmer",
    "start": "node ./bin/www",
    "test": "NODE_ENV=test npm run test:api",
    "test:api": "status=0; npm run test:api:unit || status=1 ; for dir in $(find tests/* -maxdepth 0 -type d -not -path tests/unit) ; do npm run test:api:path -- $dir || status=1 ; done ; exit $status",
    "test:api:path": "NODE_ENV=test mocha --exit --recursive --reporter=dot",
    "test:api:unit": "TEST_DATABASE_URL=bad_url npm run test:api:path -- tests/unit",
    "test:api:integration": "npm run test:api:path -- tests/integration",
    "test:api:acceptance": "npm run test:api:path -- tests/acceptance",
    "release": "npm run release:minor",
    "release:patch": "npm version patch -m \"Release v%s\"",
    "release:minor": "npm version minor -m \"Release v%s\"",
    "release:major": "npm version major -m \"Release v%s\"",
    "preversion": "git checkout dev && git pull --rebase && npm test",
    "version": "node scripts/release/get-pull-requests-to-release-in-prod.js && git add package.json CHANGELOG.md",
    "postversion": "git push && git checkout master && git pull && git fetch -t && git merge dev --no-edit && git push origin master && git push --tags && git checkout dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VincentHardouin/ING4-DevOps-Projet.git"
  },
  "author": "Olivier Gomes, Vincent Hardouin & Hugo Pauthier",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VincentHardouin/ING4-DevOps-Projet/issues"
  },
  "homepage": "https://github.com/VincentHardouin/ING4-DevOps-Projet#readme",
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "dayjs": "^1.9.1",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "hbs": "~4.0.4",
    "http-errors": "~1.6.3",
    "lodash": "^4.17.20",
    "morgan": "~1.9.1",
    "node-sass-middleware": "0.11.0"
  },
  "devDependencies": {
    "axios": "^0.20.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "express-swagger-generator": "^1.1.17",
    "mocha": "^8.1.3",
    "prettier": "2.1.2",
    "sinon": "^9.1.0",
    "sinon-chai": "^3.5.0"
  }
}
